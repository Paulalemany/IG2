material example/sky{
 technique{
        pass{
            
            lighting off
            
            texture_unit {
                texture spaceSky.jpg
            }
        }
    }
}

vertex_program skyVS glsl{ 
    source skyVS.glsl 
    default_params
    { 
        param_named_auto modelViewProjMat worldviewproj_matrix 
    } 
}  

fragment_program skyFS glsl{
   source skyFS.glsl
   default_params
   {
        param_named space int 0
        param_named light int 1

        param_named intLuzAmb float 0.8
   }
}

material example/spaceSkyShader{
    technique{
        pass{

            vertex_program_ref skyVS{} 
            fragment_program_ref skyFS{}

            texture_unit{
                texture spaceSky.jpg
                tex_address_mode clamp 
                filtering bilinear
            }

            texture_unit{
                texture lightMap.jpg
                tex_address_mode wrap
				colour_op modulate
            }
        }
    }
}

